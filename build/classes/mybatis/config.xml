<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <properties resource="mybatis/db.properties"/> 
  <typeAliases>
      <typeAlias type="Member.MemberVO" alias="member"/>
      <typeAlias type="Board.BoardVO"  alias="board" />   
      <typeAlias type="Movie.MovieVO"  alias="movie" />   
      <typeAlias type="Reservation.ReservationVO"  alias="reservation" />   
      <typeAlias type="Screening.ScreeningVO"  alias="screening" />   
      <typeAlias type="Theater.TheaterVO"  alias="theater" />   
       
  </typeAliases> 
  
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  
  <mappers>
    <mapper resource="mybatis/MemberMapper.xml"/>
    <mapper resource="mybatis/BoardMapper.xml"/>
    <mapper resource="mybatis/MovieMapper.xml"/>
    <mapper resource="mybatis/ReservationMapper.xml"/>
    <mapper resource="mybatis/ScreeningMapper.xml"/>
    <mapper resource="mybatis/TheaterMapper.xml"/>
  </mappers>
</configuration>
