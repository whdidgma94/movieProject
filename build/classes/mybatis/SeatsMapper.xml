<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.seats">

	<resultMap id="seats" type="Seats.SeatsVO">
		<id property="theaterNo" column="theaterNo" />
		<result property="seatNum" column="seatNum" />
		<result property="checkSeat" column="checkSeat" />
	</resultMap>

	<select id="getAllSeats" resultMap="seats">
		SELECT * FROM seats
	</select>

	<select id="getValidSeats" resultType="seats">
		select seatNum from seats where checkSeat = true;
	</select>

	<select id="getOneSeat" resultType="seats" parameterType="String">
		select * from seats where seatNum=#{seatNum}
	</select>

</mapper>